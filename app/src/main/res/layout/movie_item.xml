<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/min_wallpaper_height"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_outline_primary_24dp"/>
        <TextView
            android:id="@+id/video_singer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="陈紫"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_video_play_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#aaffffff"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:background="@color/colorPrimary"
        android:text="1920times"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="桃李不言下自成蹊"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <VideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/video_view_first_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/item_video_play_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_arrow_white_24dp"
                android:background="@android:color/transparent"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
